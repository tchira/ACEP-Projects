<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helloworldglass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
        
        <uses-permission
     android:name="com.google.android.glass.permission.DEVELOPMENT" />
      
    <application
     android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
       >
        
    <uses-library
            android:name="com.google.android.glass"
            android:required="true" />
            
 
    
            
    <activity
            android:name="com.example.helloworldglass.MenuActivity"
            android:label="@string/app_name"
            android:enabled="true">
            android:theme="@style/MenuTheme"
   </activity>
   
       <activity
            android:name="com.example.helloworldglass.CardScrollingActivity"
            android:label="@string/app_name"
            android:enabled="true">
            
   </activity>
   
     <activity
            android:name="com.example.helloworldglass.TestListActivity"
            android:enabled="true">
            
   </activity>
   
    <activity
            android:name="com.example.helloworldglass.SequenceTest"
            android:enabled="true">
            
   </activity>

	 <activity
            android:name="com.example.helloworldglass.ViewScrollingActivity"
            android:label="@string/app_name"
            android:enabled="true">
            
   </activity>
		 <service
            android:name="com.example.helloworldglass.HelloGlass"
            android:label="@string/app_name"
            android:enabled="true" 
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>
            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/voicetrigger" />
        </service>
    
    
        
   </application>

</manifest>